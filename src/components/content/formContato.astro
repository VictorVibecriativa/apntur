<div>
    <h3 class="tltMsmContato">Entrar em contato</h3>

    <div class="form-group">
        <textarea
            class="form-control mensagForm w-100"
            name="message"
            id="message"
            cols="30"
            rows="9"
            this.placeholder="Enter Message"
            placeholder="Enter Message"></textarea>
    </div>

    <div class="mtsec2rem row">
        <div class="col-sm-6">
            <div class="form-group">
                <input
                    class="form-control valid inputsform"
                    name="name"
                    id="name"
                    type="text"
                    onblur="this.placeholder = 'Enter your name'"
                    placeholder="Enter your name"
                />
            </div>
        </div>

        <div class="col-sm-6">
            <div class="form-group mobmargintop">
                <input
                    class="form-control valid inputsform"
                    name="email"
                    id="email"
                    type="email"
                    onblur="this.placeholder = 'Enter email address'"
                    placeholder="E-mail"
                />
            </div>
        </div>
    </div>

    <div class="form-group mtsec2rem">
        <input
            class="form-control inputsform"
            name="subject"
            id="subject"
            type="text"
            onfocus="this.placeholder = ''"
            onblur="this.placeholder = 'Enter Subject'"
            placeholder="Enter Subject"
        />
    </div>

    <div class="form-group mtsec2rem mb-40">
        <button type="submit" class="button button-contactForm boxed-btn"
            >Send</button
        >
    </div>
</div>
