---
import HTML from "../../../pages/paineladm/_base.astro";
---
<style>
    
</style>
<HTML title="Início" description="">
    <div class="container p-4">
        <div>
            <header class="container headerAdm">
                <h4>Listar Notícias</h4>
            </header>
        </div>

        <div class="d-flex container mt-3 mb-3">
            <input autocomplete="off" class="form-control mr-sm-2" name="data" id="datepicker"
                placeholder="Buscar Noticias">
            <button id="datapesquisa" class="btn btn-outline-primary" type="submit"><i
                    class="fa-solid fa-magnifying-glass"></i></button>
        </div>
    
    
        <div class="col-sm-12 col-md-12">
           
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">Data</th>
                            <th scope="col">Capa</th>
                            <th scope="col">Título</th>
                            <th scope="col">Categorias</th>
                            <th scope="col">Ativo</th>
                            <th scope="col">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr id="" class="DOM">
                            <th scope="row"></th>
                            <td></td>
                            <td>
                                <div class="container">
                                    <img src="" class="img-thumbnail" alt="" width="150"
                                        height="150">
                                </div>
                            </td>
                            <td></td>
                            <td>
                                <div class="btn-group-vertical">
                                    <button style="margin: 0 0 2px 0;" type="button"
                                        class="btn btn-danger">a</button>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex">
                                    <input value="on" type="checkbox" id="{{item.not_id}}" checked data-toggle="toggle"
                                        data-on="ativado" data-onstyle="success" data-off="desativado"
                                        data-offstyle="danger" data-size="sm" onchange="ativofunc({{item.  not_d}})">  
                                    <input value="off" type="checkbox" id="{{item.not_id}}" data-toggle="toggle"
                                        data-on="ativado" data-onstyle="success" data-off="desativado"
                                        data-offstyle="danger" data-size="sm" onchange="ativofunc({{item.  not_d}})">  
                                </div>
                            </td>
                            <td>
                                <a class="btn btn-primary" href="/paineladm/listarnoticiaeditar/{{item.not_id}}"
                                    role="button"><i class="fa-solid fa-pen-to-square"></i></a>
                                <button type="button" class="btn btn-danger" onclick="excluir({{item.  not_d}})">  <i
                                        class="fa-solid fa-trash"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="card bg-danger text-center">
                    <div class="card-body">
                        nem uma notícia encontrada...
                    </div>
                </div>
                <br>
                <div style="margin: 0px 16px 0px 1px;" aria-label="Page navigation example"
                    class="mt-4 d-flex justify-content-end">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link"
                                href="/paineladm/listarnoticia/{{titulo}}/{{pagAnterior}}">Voltar</a></li>
                        <li class="page-item"><a class="page-link"
                                href="/paineladm/listarnoticia/{{titulo}}/{{item}}"></a></li>
                        <li class="page-item active"><a class="page-link"></a></li>
                 
                        <li class="page-item"><a class="page-link"
                                href="/paineladm/listarnoticia/{{titulo}}/{{pagProxima}}">proximo</a></li>
                  
                    </ul>
                </div>
           
        </div>
    </div>
</HTML>
