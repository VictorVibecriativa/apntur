---
import HTML from "@/pages/_base.astro";
import "@/styles/blog.css";
import "@/styles/blogPost.css";
import PesquisaBlog from "@/components/content/pesquisaBlog.astro";
import CategoriaBlog from "@/components/content/categoriaBlog.astro";
import RecentPost from "@/components/content/recentPost.astro";
import SubCategoria from "@/components/content/subCategoria.astro";
import Feedsinsta from "@/components/content/feedsinsta.astro";
import Newsletter from "@/components/content/newsletter.astro";
import NavegacaoCompartilha from "@/components/content/navegacaoCompartilha.astro";
import NoticiaPost from "@/components/content/noticiaPost.astro";
import ComentariosBlog from "@/components/content/comentariosBlog.astro";
import FormResposta from "@/components/content/formResposta.astro";
---

<HTML title="Base Project" description="">
    <div class="bgHeader">
        <h3 class="tltHeader">Single Blog</h3>
    </div>

    <div class="container sectbxBlog">
        <div class="row">
            <div class="col-md-8">
                <!-- Noticica -->
                <NoticiaPost />

                <!-- Navegação like e compartilhamento -->
                <NavegacaoCompartilha />

                <!-- Comentarios -->
                <ComentariosBlog />

                <!-- Formulario resposta -->
                <FormResposta />
            </div>

            <div class="col-md-4">
                <!-- Search -->
                <PesquisaBlog />

                <!-- Categoria -->
                <CategoriaBlog />

                <!-- Recent Post -->
                <RecentPost />

                <!-- Sub Categoria -->
                <SubCategoria />

                <!-- Feeds Istagram -->
                <Feedsinsta />

                <!-- Newsletter -->
                <Newsletter />
            </div>
        </div>
    </div>
</HTML>
