---
import "@/styles/servicos.css";
import HTML from "@/pages/_base.astro";
import Ofertas from "@/components/content/ofertas.astro";
import QuartosHome from "@/components/content/quartosHome.astro";
import InstaHome from "@/components/content/instaHome.astro";
---

<HTML title="Servico" description="">
    <div class="bgHeader">
        <h3
            class="tltHeader txt_shadow animate__animated animate__fadeIn aniDurat txt_shadow"
        >
            4x4 Litoral Sul
        </h3>
    </div>

    <div class="container mtNegativo">
        <div
            id="carouselExampleControls"
            class="carousel slide"
            data-bs-ride="carousel"
        >
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img
                        src="/public/imagens/servicos/7.png"
                        class="d-block w-100"
                        alt="..."
                    />
                </div>
                <div class="carousel-item">
                    <img
                        src="/public/imagens/servicos/7.png"
                        class="d-block w-100"
                        alt="..."
                    />
                </div>
                <div class="carousel-item">
                    <img
                        src="/public/imagens/servicos/7.png"
                        class="d-block w-100"
                        alt="..."
                    />
                </div>
            </div>
            <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExampleControls"
                data-bs-slide="prev"
            >
                <span class="carousel-control-prev-icon" aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExampleControls"
                data-bs-slide="next"
            >
                <span class="carousel-control-next-icon" aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="container mt-5 mb-5">
        <h2 class="text-center m-5 VGeral">Visão Geral</h2>

        <div class="row">
            <div class="col-md-7">
                <div class="col-md-7">
                    <h3 class="tltPasseio">
                        Passeio 4X4 litoral sul (Saídas diária)
                    </h3>

                    <p>Início do passeio: 7h/8h</p>
                    <p>Vera Cruz 4x4, com destino ao Litoral Sul.</p>

                    <div class="mt-3">
                        <h3 class="tltPasseio2">
                            Barreira do Inferno (entrada grátis)
                        </h3>

                        <h3 class="tltPasseio2 mt-2">
                            Maior Cajueiro do Mundo (entrada R$8,00)
                        </h3>

                        <h3 class="tltPasseio2 mt-2">Mirante de Tabatinga</h3>
                        <p>(parada para fotos).</p>

                        <h3 class="tltPasseio2 mt-2">
                            Visita a um engenho de Cachaça (Papari).
                        </h3>

                        <h3 class="tltPasseio2 mt-2">
                            Lagoa do Carcará -Frutas tropicais na lagoa, redes
                            na lagoa para fotos (parada para banho)
                        </h3>

                        <h3 class="tltPasseio2 mt-2">
                            Praia de Camurupim (parada para banho e Stand Up)
                        </h3>

                        <h3 class="tltPasseio2 mt-2">
                            Lagoa de Arituba (parada para banho)
                        </h3>

                        <h3 class="tltPasseio2 mt-2">
                            Dunas de Búzios (Pôr do sol e Esquibunda)
                        </h3>

                        
                        <h3 class="tltPasseio0 mt-2">Itens inclusos no valor do Passeio.</h3>
                        <ul>
                            <li class="list">Guia de turismo credenciada</li>
                            <li class="list">Cooler com gelo</li>
                            <li class="list">Frutas Tropicais</li>
                            <li class="list">Stand Up (30min)</li>
                            <li class="list">Esquibunda</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col container">
                <h3 class="tltPasseio0">Valor do passeio</h3>
                <p class="mt-2 preco">R$ 180,00 Por pessoa</p>
                <a
                    href="https://web.whatsapp.com/send?phone=5584988988779&text=+Olá"
                >
                    <button class="bttReservaPasseio"> Reservar agora</button>
                </a>
            </div>
        </div>

        <!-- Ofertas -->
        <Ofertas />

        <!-- Quartos -->
        <QuartosHome />

        <!-- Instagram -->
        <InstaHome />
    </div>
</HTML>
